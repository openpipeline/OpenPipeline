	eval $uiScript;
	iconTextButton -e -l "-" $shotiTB;
	break;
	
	case "-":
	string $childCol[] = `columnLayout -q -ca ("col_"+$inputSeq+"_"+$inputShot)`;
	for($i=1;$i<`size $childCol`;$i++)
