		$uiScript += "\"openPipelineCreateReference seq";
		$uiScript += (" "+"\\"+"\""+$expectedMasterFile+"\\"+"\""+"\" ");
		$uiScript += (" iTB_"+$inputSeq+"_"+$inputShot+"_"+$theTypes[$i]+";\n");
		$uiScript += "setParent..;\n";
